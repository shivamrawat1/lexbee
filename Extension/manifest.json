{
    "name": "LexBee",
    "description": "LexBee is a browser extension that helps you learn new words and phrases.",
    "version": "1.0.1",
    "manifest_version": 3,
    "icons": {
        "16": "images/favicon-16x16.png",
        "32": "images/favicon-32x32.png",
        "48": "images/favicon-48x48.png",
        "128": "images/favicon-128.png"
    },
    "action": {
        "default_popup": "/default_popup/instructions.html"
    },
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://meanings.onrender.com/*",
        "https://lexbee-production.up.railway.app/*"
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "content_scripts/content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}